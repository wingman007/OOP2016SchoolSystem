@model IEnumerable<SchoolSystem.Models.Teachers>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/jumbostyle.css")

<h2>Teachers:</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
